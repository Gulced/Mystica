<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creamBackground">

    <!-- Fragment'lar burada gÃ¶sterilecek -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavbar" />

    <!-- Bottom navbar -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/navbarBackground"
        android:padding="12dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/bottomNavbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Profile -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <ImageButton
                    android:id="@+id/btnProfile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_profile"
                    android:background="@android:color/transparent"
                    android:contentDescription="Profile" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="12sp"
                    android:textColor="@color/textDark"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Home -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_home"
                    android:background="@android:color/transparent"
                    android:contentDescription="Home" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="@color/textDark"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_settings"
                    android:background="@android:color/transparent"
                    android:contentDescription="Settings" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="12sp"
                    android:textColor="@color/textDark"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Angel -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <ImageButton
                    android:id="@+id/btnAngel"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_angel"
                    android:background="@android:color/transparent"
                    android:contentDescription="Angel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angel"
                    android:textSize="12sp"
                    android:textColor="@color/textDark"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Tarot -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <ImageButton
                    android:id="@+id/btnTarot"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_tarot"
                    android:background="@android:color/transparent"
                    android:contentDescription="Tarot" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarot"
                    android:textSize="12sp"
                    android:textColor="@color/textDark"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Thought -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <ImageButton
                    android:id="@+id/btnThought"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_thought"
                    android:background="@android:color/transparent"
                    android:contentDescription="Thought" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thought"
                    android:textSize="12sp"
                    android:textColor="@color/textDark"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
